<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:background="@drawable/yq"/>
        <ImageView
            android:layout_marginLeft="3dp"
            android:id="@+id/iv_tx_zj"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/placeholder_disk_210"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="70dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_art_zj"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="依然范特西"/>
        <TextView
            android:id="@+id/tv_num_zj"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="1首  周杰伦"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_music_more_chars"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:background="@drawable/list_icn_more"/>
</RelativeLayout>