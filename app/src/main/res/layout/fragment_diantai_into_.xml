<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="250dp">
     <ImageView
         android:scaleType="fitXY"
         android:id="@+id/iv_bakc_dt"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#aaaaaa"/>
     <TextView
         android:id="@+id/tv_dt_into_title"
     android:textColor="#ffffff"
     android:textSize="18sp"
     android:text="小松奇葩说（人文）"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="40dp"
     android:layout_marginLeft="5dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
     <TextView
         android:id="@+id/tv_dt_into_dy"
         android:textColor="#ffffff"
         android:textSize="12sp"
         android:text="订阅（1235）"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="20dp"
         android:layout_marginLeft="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <android.support.v7.widget.CardView
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="7dp"
         android:layout_marginBottom="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="#00000000"
         app:cardCornerRadius="15dp">
         <ImageView
             android:layout_marginLeft="10dp"
             android:layout_gravity="center|left"
             android:background="@drawable/va"
             android:layout_width="15dp"
             android:layout_height="15dp" />
         <TextView
             android:id="@+id/tv_card_name"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="5dp"
             android:text="       订阅"
             android:textColor="#000000"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </android.support.v7.widget.CardView>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="60dp"
         android:background="#00000000"
         android:gravity="center|left"
         android:orientation="horizontal">

         <ImageButton
             android:id="@+id/ib_backmain_dt"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginLeft="10dp"
             android:background="@drawable/actionbar_back" />

         <TextView
             android:id="@+id/tv_news_tt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:gravity="center"
             android:text="电台"
             android:textColor="#ffffff"
             android:textSize="18dp" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:gravity="center|right">
             <ImageButton
                 android:id="@+id/ib_dt_into1"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/play_icn_more_prs" />
             <ImageButton
                 android:layout_marginTop="15dp"
                 android:id="@+id/ib_dt_into2"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/a4r"
                 android:layout_toStartOf="@+id/ib_dt_into1" />
         </RelativeLayout>
     </LinearLayout>
 </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_dt_into_1"
            android:gravity="center"
            android:text="详情"
            android:textColor="#ff0000"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_dt_into_2"
            android:gravity="center"
            android:text="节目"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageView
            android:id="@+id/iv_list_huadong13"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:background="@drawable/icon_list_huadong"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dt_into"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>