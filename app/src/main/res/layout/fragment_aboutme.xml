<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/img_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CD0000" />

        <TextView
            android:id="@+id/personal_msg"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="个人信息"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_leval"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="等级 :"
            android:textColor="#8B8386" />

        <ImageView
            android:id="@+id/leval_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="年龄 :"
            android:textColor="#8B8386" />

        <TextView
            android:id="@+id/age_meg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="95后   巨蟹座"
            android:textColor="#8B8386" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="性别 :"
            android:textColor="#8B8386" />

        <TextView
            android:id="@+id/gender_meg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="女"
            android:textColor="#8B8386" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="地区 :"
            android:textColor="#8B8386" />

        <TextView
            android:id="@+id/age_meg1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="陕西省  西安市"
            android:textColor="#8B8386" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_school"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="学校 :"
            android:textColor="#8B8386" />

        <TextView
            android:id="@+id/school_meg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="西北农林科技大学"
            android:textColor="#8B8386" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/img_line1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CD0000" />

        <TextView
            android:id="@+id/text_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="个人介绍"
            android:textColor="#000000" />
    </LinearLayout>
    <TextView
            android:id="@+id/jieshao_meg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:text="哈哈"
            android:textColor="#8B8386" />

</LinearLayout>