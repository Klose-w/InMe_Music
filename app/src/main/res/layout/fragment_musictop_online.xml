<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_line_gx"
            android:gravity="center"
            android:text="个性推荐"
            android:textColor="#ff0000"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_line_gd"
            android:gravity="center"
            android:text="歌单"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_line_dt"
            android:gravity="center"
            android:text="主播电台"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_line_ph"
            android:gravity="center"
            android:text="排行榜"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:id="@+id/iv_list_huadong1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:background="@drawable/icon_list_huadong"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_line_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
