<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wade.inme.Fragment.GdDiaplayFragment">

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/lv_gd_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <LinearLayout
        android:id="@+id/ll_bar_ll"
        android:background="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left">
        <ImageButton
            android:id="@+id/ib_backmain"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/actionbar_back"
            />
        <TextView
            android:id="@+id/tv_gd_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="歌单"/>
        <RelativeLayout
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageButton
                android:id="@+id/ib_local_music_more"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/play_icn_more_prs"/>
            <ImageButton
                android:layout_marginRight="6dp"
                android:layout_marginTop="13dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/actionbar_search"
                android:layout_toStartOf="@+id/ib_local_music_more" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
