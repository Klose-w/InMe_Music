<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6E6"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/natease"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/lj" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            android:text="我的资料" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_tx"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.70"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="    更换头像"
            android:textSize="18sp" />

        <com.example.wade.inme.UIwedget.CircleImageView
            android:id="@+id/circleImageView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_bj"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_weight="1.78"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="    更换个人主页背景"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ewn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:text="    二维码"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:text="    昵称"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_sex"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="left|center"
            android:text="性别"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_birth"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            android:gravity="left|center"
            android:text="生日"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_area"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="left|center"
            android:text="地区"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_qm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:text="签名:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ed_qm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:hint="个人签名"
        android:textSize="18sp" />

</LinearLayout>