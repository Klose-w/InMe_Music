<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wade.inme.Fragment.IntoMusicFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="#ff0000"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:id="@+id/linearLayout">
        <ImageButton
            android:id="@+id/ib_backmain_rec"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/actionbar_back"
            />
        <TextView
            android:id="@+id/tv_title_rec"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="本地音乐"/>
        <RelativeLayout
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/bt_clean_rec"
                android:text="清空"
                android:textColor="#ffffff"
                android:background="#00ffffff"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/lv_music_rec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"></ListView>
</RelativeLayout>
