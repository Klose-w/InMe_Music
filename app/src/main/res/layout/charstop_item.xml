<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="56dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_num_top"
            android:gravity="center|bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="1"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="6dp"
            android:background="@drawable/a04"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_musictitle_chars"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorblack"
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洛阳夜雨"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_musicicon_chars"
                android:layout_width="18dp"
                android:layout_height="12dp"
                android:background="@drawable/icn_vip_sq_36"/>
            <TextView
                android:id="@+id/tv_musicatr_chars"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="HITA"/>
            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
            <TextView
                android:textSize="10dp"
                android:id="@+id/tv_musiczj_chars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洛阳夜雨"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_music_more_chars"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:background="@drawable/list_icn_more"/>
</RelativeLayout>